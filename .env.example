# Ultra-Secure Arbitrage System Configuration

# Network Configuration
NETWORK=testnet
RPC_URL=https://bsc-testnet.nodereal.io/v1/YOUR_API_KEY
WS_URL=wss://bsc-testnet.nodereal.io/ws/v1/YOUR_API_KEY

# Backup RPC URLs (Optional)
RPC_URL_BACKUP_1=https://data-seed-prebsc-1-s1.binance.org:8545/
RPC_URL_BACKUP_2=https://data-seed-prebsc-2-s1.binance.org:8545/

# Account Configuration
PRIVATE_KEY=0x...your_private_key_here

# Contract Configuration
CONTRACT_ADDRESS=0x...deployed_contract_address
EQUALIZER_POOL_ADDRESS=0x...equalizer_pool_address

# Security Configuration
ENABLE_MEV_PROTECTION=true
ENABLE_CIRCUIT_BREAKER=true
ENABLE_EMERGENCY_CONTROLS=true
ENABLE_RISK_MANAGEMENT=true

# MEV Protection Settings
MEV_COMMIT_REVEAL_DELAY=1000
MEV_MAX_SLIPPAGE_BPS=50
MEV_ENABLE_PRIVATE_MEMPOOL=false
MEV_FLASHBOTS_RELAY=https://relay.flashbots.net

# Risk Management Settings
RISK_MAX_SINGLE_TRADE_USD=10000
RISK_MAX_DAILY_VOLUME_USD=100000
RISK_MAX_SLIPPAGE_BPS=100
RISK_CIRCUIT_BREAKER_THRESHOLD=5
RISK_COOLDOWN_PERIOD_MS=300000

# Gas Configuration
GAS_MAX_PRICE_GWEI=20
GAS_MULTIPLIER=1.1
GAS_PRIORITY_FEE_MULTIPLIER=1.2
ENABLE_DYNAMIC_GAS_PRICING=true

# Monitoring Configuration
ENABLE_LIVE_MONITORING=true
DASHBOARD_REFRESH_INTERVAL=5
METRICS_RETENTION_DAYS=7

# Alert Configuration (Optional)
ALERT_WEBHOOK_URL=https://your-webhook-url.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Alert Thresholds
ALERT_GAS_ANOMALY_THRESHOLD=150
ALERT_MEV_ATTACK_THRESHOLD=3
ALERT_LOW_PROFIT_THRESHOLD=0.01
ALERT_FAILURE_RATE_THRESHOLD=0.1
ALERT_RESPONSE_TIME_THRESHOLD=5000

# Alert Rate Limiting
ALERT_MAX_PER_HOUR=10
ALERT_COOLDOWN_MINUTES=5

# Deployment Configuration
ENABLE_AUTO_DEPLOYMENT=true
DEPLOYMENT_GAS_LIMIT=5000000
DEPLOYMENT_GAS_PRICE_GWEI=5

# Performance Configuration
CONNECTION_POOL_SIZE=10
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT_MS=30000
RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000

# Arbitrage Configuration
MIN_PROFIT_THRESHOLD_USD=1
MAX_POSITION_SIZE_USD=50000
ENABLE_COMPOUND_ARBITRAGE=true
ENABLE_CROSS_DEX_ARBITRAGE=true

# DEX Configuration
ENABLE_PANCAKESWAP=true
ENABLE_BISWAP=true
ENABLE_APESWAP=true
ENABLE_BAKERYSWAP=true
ENABLE_MDEX=true

# Token Configuration
SUPPORTED_TOKENS=WBNB,BUSD,USDT,USDC,CAKE,ADA,DOT,LINK
MIN_LIQUIDITY_USD=10000

# Database Configuration (Optional)
DATABASE_URL=postgresql://user:password@localhost:5432/arbitrage
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/arbitrage.log
ENABLE_FILE_LOGGING=true
ENABLE_CONSOLE_LOGGING=true

# Development Configuration
DEBUG=false
TEST_MODE=false
DRY_RUN=false

# API Configuration (Optional)
API_PORT=3000
API_ENABLE_CORS=true
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW_MS=60000

# Webhook Configuration (Optional)
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_TIMEOUT_MS=5000

# Emergency Configuration
EMERGENCY_CONTACT_EMAIL=admin@yourcompany.com
EMERGENCY_PHONE=+1234567890
EMERGENCY_PAUSE_THRESHOLD=10

# Backup Configuration
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# Maintenance Configuration
MAINTENANCE_WINDOW_START=02:00
MAINTENANCE_WINDOW_END=04:00
MAINTENANCE_TIMEZONE=UTC

# =============================================================================
# API KEYS
# =============================================================================
BSCSCAN_API_KEY=your_bscscan_api_key_here
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here
MORALIS_API_KEY=your_moralis_api_key_here
ALCHEMY_API_KEY=your_alchemy_api_key_here

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
MAX_CONCURRENT_TX=10
BATCH_SIZE=5
EXECUTION_TIMEOUT=30000
CONFIRMATION_BLOCKS=1
MAX_SLIPPAGE=0.5
MIN_PROFIT_THRESHOLD=0.01

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
ENABLE_SECURITY_LAYER=true
ENABLE_MULTI_SIG=false
ENABLE_MEV_PROTECTION=true
ENABLE_FLASHBOTS=true
MAX_TRANSACTION_VALUE=10
SECURITY_THRESHOLD=0.8

# =============================================================================
# GAS OPTIMIZATION
# =============================================================================
GAS_STRATEGY=balanced
ENABLE_GAS_OPTIMIZATION=true
MAX_GAS_PRICE=20
MIN_GAS_PRICE=5
GAS_MULTIPLIER=1.2
PRIORITY_FEE=2

# =============================================================================
# CONNECTION SETTINGS
# =============================================================================
ENABLE_CONNECTION_POOL=true
MAX_CONNECTIONS=20
CONNECTION_TIMEOUT=10000
RETRY_ATTEMPTS=3
RETRY_DELAY=1000

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
ENABLE_REAL_TIME_MONITORING=true
ENABLE_PERFORMANCE_TRACKING=true
LOG_LEVEL=info
ENABLE_METRICS_EXPORT=true
METRICS_PORT=3001

# =============================================================================
# EMERGENCY CONTROLS
# =============================================================================
ENABLE_EMERGENCY_STOP=true
ENABLE_CIRCUIT_BREAKER=true
CIRCUIT_BREAKER_THRESHOLD=5
EMERGENCY_CONTACT=your_emergency_contact_here

# =============================================================================
# ADVANCED FEATURES
# =============================================================================
ENABLE_PREDICTIVE_ANALYSIS=true
ENABLE_ML_OPTIMIZATION=false
ENABLE_CROSS_CHAIN_ARBITRAGE=false
ENABLE_ADVANCED_ROUTING=true

# =============================================================================
# CACHING & REDIS
# =============================================================================
ENABLE_CACHING=true
REDIS_URL=redis://localhost:6379
CACHE_TTL=300
ENABLE_DISTRIBUTED_CACHE=false

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/ultra_arbitrage
ENABLE_DATABASE_LOGGING=true
DATABASE_POOL_SIZE=10

# =============================================================================
# WEBHOOK & NOTIFICATIONS
# =============================================================================
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your_webhook_here

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
NODE_ENV=development
DEBUG=ultra:*
ENABLE_TEST_MODE=false
MOCK_TRANSACTIONS=false
DRY_RUN=false

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_RATE_LIMITING=true

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL=3600000
BACKUP_LOCATION=./backups
MAX_BACKUP_FILES=10

# =============================================================================
# COMPLIANCE & REPORTING
# =============================================================================
ENABLE_COMPLIANCE_MODE=false
REPORTING_INTERVAL=86400000
ENABLE_AUDIT_LOGGING=true
COMPLIANCE_THRESHOLD=1000